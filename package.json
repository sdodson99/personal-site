{
  "name": "personal-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:stage": "NODE_ENV=test next build",
    "start": "next start",
    "lint:eslint": "eslint ./src --ext=.tsx,.ts",
    "lint:prettier": "prettier --check ./src",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "fix:eslint": "eslint --fix ./src --ext=.tsx,.ts",
    "fix:prettier": "prettier --write ./src",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "e2e": "playwright test",
    "generate": "npx generate-react-cli component",
    "export": "next export",
    "deploy": "firebase deploy --only hosting",
    "deploy:stage": "firebase hosting:channel:deploy --expires 7d",
    "clean": "rm -rf .firebase .next coverage out && echo All clean!"
  },
  "dependencies": {
    "constate": "^3.3.2",
    "firebase": "^9.10.0",
    "glob": "^8.0.3",
    "gray-matter": "^4.0.3",
    "luxon": "^3.0.3",
    "next": "12.3.0",
    "next-seo": "^5.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.3",
    "react-syntax-highlighter": "^15.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@playwright/test": "^1.25.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.0.2",
    "@types/jest-when": "^3.5.2",
    "@types/luxon": "^3.0.1",
    "@types/node": "18.7.18",
    "@types/react": "18.0.20",
    "@types/react-dom": "18.0.6",
    "@types/react-syntax-highlighter": "^15.5.5",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "babel-jest": "^29.0.3",
    "eslint": "8.23.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-next": "12.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.8",
    "firebase-tools": "^11.10.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "jest-when": "^3.5.1",
    "prettier": "^2.7.1",
    "typescript": "4.8.3"
  }
}
