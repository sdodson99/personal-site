{
  "name": "personal-site",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "build:stage": "NODE_ENV=test astro build",
    "lint:eslint": "eslint ./src --ext=.tsx,.ts,.astro",
    "lint:prettier": "prettier --check --plugin-search-dir=. ./src",
    "lint": "pnpm run lint:eslint && pnpm run lint:prettier",
    "fix:eslint": "eslint --fix ./src --ext=.tsx,.ts,.astro",
    "fix:prettier": "prettier --write --plugin-search-dir=. ./src",
    "fix": "pnpm run fix:eslint && pnpm run fix:prettier",
    "e2e": "playwright test",
    "e2e:update": "pnpm e2e -- --update-snapshots",
    "deploy": "firebase deploy --only hosting",
    "deploy:stage": "firebase hosting:channel:deploy --expires 7d",
    "clean": "rm -rf .firebase out && echo All clean!"
  },
  "dependencies": {
    "@astrojs/partytown": "^1.0.2",
    "@astrojs/prefetch": "^0.1.1",
    "@astrojs/tailwind": "^2.1.3",
    "astro": "^1.9.0",
    "astro-icon": "^0.8.0",
    "astro-seo": "^0.6.1",
    "luxon": "^3.2.1",
    "tailwindcss": "^3.0.24"
  },
  "devDependencies": {
    "@playwright/test": "^1.29.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/luxon": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-astro": "^0.21.1",
    "firebase-tools": "^11.20.0",
    "prettier-plugin-astro": "^0.7.2",
    "typescript": "^4.9.4"
  }
}
