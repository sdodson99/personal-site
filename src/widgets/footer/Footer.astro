---
import { Image } from '@astrojs/image/components';
import { Icon } from 'astro-icon';
import logo from '@/images/logo.png';

const year = new Date().getFullYear();

const socials = [
  {
    description: 'Subscribe to my YouTube channel',
    href: 'https://www.youtube.com/c/SingletonSean',
    icon: 'youtube',
  },
  {
    description: 'Follow me on Twitter',
    href: 'https://twitter.com/sdodson_',
    icon: 'twitter',
  },
  {
    description: 'Explore my GitHub contributions',
    href: 'https://github.com/sdodson99',
    icon: 'github',
  },
  {
    description: 'Connect with me on LinkedIn',
    href: 'https://www.linkedin.com/in/sean-dodson21/',
    icon: 'linkedin',
  },
];
---

<footer class="text-center">
  <section class="bg-gray-100 py-8">
    <div
      class="container flex flex-col sm:flex-row sm:items-center sm:justify-between"
    >
      <div class="flex justify-center">
        <Image src={logo} alt="" width={75} height={75} />
      </div>
      <div class="mt-10 sm:mt-0">
        <div class="socials-header">Follow My Socials</div>
        <div class="mt-3 flex items-center justify-center">
          {
            socials.map(({ href, description, icon }) => (
              <a href={href} target="_blank" rel="noreferrer" class="mx-1">
                <Icon
                  class="mx-3 h-8 w-8"
                  pack="mdi"
                  name={icon}
                  title={description}
                />
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </section>
  <section class="bg-gray-600 p-4 text-xs text-white">
    Copyright Â© {year} Sean Dodson. All rights reserved.
  </section>
</footer>

<style>
  .socials-header {
    color: var(--color-primary);

    @apply text-sm font-bold;
  }
</style>
